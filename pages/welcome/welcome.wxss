.container{
  /*弹性模型 http://www.ruanyifeng.com/blog/2015/07/flex-grammar.html*/
  display: flex;
  /*使容器中的元素垂直排列*/
  flex-direction:column;
  /*居中对齐*/
  align-items: center;
background-color: cornflowerblue;
}

.avatar{
  width:400rpx;
  height:400rpx;
  margin-top:160rpx;
}

.motto{
  margin-top:100rpx;
  font-size:32rpx;
  font-weight: bold;
}

.journey-container{
  margin-top: 200rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align:center;
}

.journey{
  font-size:22rpx;
  font-weight: bold;
  line-height:80rpx;
